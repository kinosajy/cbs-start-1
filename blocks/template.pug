include _assets/bemto/bemto
- set_bemto_settings({ modifier: "--" })

mixin icon(name,mod)
    - mod = mod || ''
    svg(class="svg-icon svg-icon-" + name + ' ' + mod)
        use(xlink:href="img/svg/sprite/sprite.svg#" + name)

include common/head/head
include common/header/header
include common/footer/footer


doctype html
html(lang="ru")

    block head
        head
            +head({
                "title": "Workshop",
                "author": "Space Academy",
                "description": "Workshop"
            })

        body
            .page
                block header
                    +header

                block content
                    div content

                block footer
                    +footer

            block vendors
                // build:js js/vendor.js
                script( src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js")
                script.
                    window.jQuery || document.write('<script src="js/jquery.min.js">\x3C/script>')

                script(src="https://cdnjs.cloudflare.com/ajax/libs/svg4everybody/2.1.9/svg4everybody.min.js")
                script(src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js")
                // endbuild

            block scripts
                // build:js js/main.js
                script( src="js/main.js")
                // endbuild
